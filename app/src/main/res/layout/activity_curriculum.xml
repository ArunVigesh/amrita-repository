       android:divider="@null"
       android:layout_marginTop="5dp"
        android:isScrollContainer="false"
        android:clickable="false"
        android:id="@+id/sem1"
        android:dividerHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

